<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFACD"
    tools:context="com.example.caotiancheng.session2.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/H"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Size (ml)"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#4689C8"
            android:gravity="center"
            android:background="#faff72"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/W"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="sugar (%)"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#4689C8"
            android:gravity="center"
            android:background="#faff72"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/H"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/EH"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="(ml)"
            android:inputType="number" />

        <EditText
            android:id="@+id/EW"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/EH"
            android:hint="(%)"
            android:inputType="number" />

    </RelativeLayout>

    <Button
        android:id="@+id/Cal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"

        android:onClick="calBMI"/>
    <ImageView
        android:id="@+id/pic"
        android:layout_width="348dp"
        android:layout_height="276dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/a" />
    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Guess What You Get"
        android:textSize="25sp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#4689C8"
        android:textStyle="bold" />

</LinearLayout>
